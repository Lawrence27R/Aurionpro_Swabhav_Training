package com.aurionpro.structural.composite.model;
import java.util.ArrayList;
import java.util.List;

public class CompositeComponent implements IComputerComponents {
    private String name;
    private List<IComputerComponent> components = new ArrayList<>();

    public CompositeComponent(String name) {
        this.name = name;
    }

    public void add(IComputerComponent component) {
        components.add(component);
    }

    public void remove(IComputerComponent component) {
        components.remove(component);
    }

    @Override
    public void showPrice() {
        System.out.println(name);
        for (IComputerComponent component : components) {
            component.showPrice();
        }
    }
}
