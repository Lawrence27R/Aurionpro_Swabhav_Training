package com.aurionpro.structural.adapter.model;

public class HatAdaptar implements IItems{
	private Hat hat;

	public HatAdaptar(Hat hat) {
		super();
		this.hat = hat;
	}

	@Override
	public void getItemName() {
		String name = hat.getLongName();
		System.out.println("Hat name :"+name);
	}

	@Override
	public void getItemPrice() {
		double price = hat.getBasicPrice() + hat.getTax();
		System.out.println("Hat price: "+price);
	}
	
}
