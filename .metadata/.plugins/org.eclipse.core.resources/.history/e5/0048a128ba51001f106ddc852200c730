package com.aurionpro.model;

package test;

import model.TicTacToeFacade;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        TicTacToeFacade game = new TicTacToeFacade(); // Using Facade
        Scanner scanner = new Scanner(System.in);
        boolean gameOver = false;

        while (!gameOver) {
            game.printBoard(); // Using Facade
            System.out.print("Player " + game.getCurrentPlayer().getSymbol() + " enter (row and column): ");
            int row = scanner.nextInt();
            int col = scanner.nextInt();
            System.out.println();

            if (game.makeMove(row, col)) { // Using Facade
                gameOver = game.checkGameOver(); // Using Facade
                if (gameOver) {
                    System.out.println("Player " + game.getCurrentPlayer().getSymbol() + " has won!");
                } else {
                    game.switchPlayer(); // Using Facade
                }
            } else {
                System.out.println("Invalid move. Try again!");
            }
        }
        game.printBoard(); // Using Facade
    }
}

