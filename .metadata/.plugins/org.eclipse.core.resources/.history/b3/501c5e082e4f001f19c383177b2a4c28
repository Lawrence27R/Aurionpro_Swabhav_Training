package com.aurionpro.creational.factory.model;

public class SavingsAccount implements IAccount{
	
	private int accountNumber;
	private String name;
	private double minimumBalance = 2000;
	
	
	public SavingsAccount(int accountNumber, String name, double minimumBalance) {
		super();
		this.accountNumber = accountNumber;
		this.name = name;
		this.minimumBalance = balance;
	}

	
	public int getAccountNumber() {
		return accountNumber;
	}


	public void setAccountNumber(int accountNumber) {
		this.accountNumber = accountNumber;
	}


	public String getName() {
		return name;
	}


	public void setName(String name) {
		this.name = name;
	}


	public double getBalance() {
		return minimumBalance;
	}


	public void setBalance(double minimumBalance) {
		this.minimumBalance = minimumBalance;
	}


	@Override
	public void credit(double amount) {
		minimumBalance += amount;
		System.out.println("Total balance : "+minimumBalance);
		
	}

	@Override
	public void debit(double amount) {
		if (amount > minimumBalance) {
			System.out.println("Entered amount should be less than Minimum Balance"+minimumBalance);
		}
		minimumBalance -= amount;
		System.out.println("Balance "+minimumBalance);
		
		
	}


	
}
