package com.aurionpro.creational.factory.model;

public class AccountFactory {
	public IAccount getSavingsAccount(int accountNumber, String name, double minimumBalance ) {
		IAccount savingsAccount = null;
		
		if (AccountType.SAVINGSACCOUNT != null) {
			savingsAccount = new SavingsAccount();
		}
		if (AccountType.CURRENTACCOUNT != null) {
			savingsAccount = new CurrentAccount();
		}
		return savingsAccount;
	}
	
	public IAccount getCurrentAccount(int accountNumber, String name, double overDraftLimit) {
		IAccount currentAccount = null;
		
		if (AccountType.CURRENTACCOUNT != null) {
			currentAccount = new CurrentAccount();
		}
		return currentAccount;
	}
}
