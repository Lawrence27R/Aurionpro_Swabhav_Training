package com.aurionpro.model;

import static org.junit.jupiter.api.Assertions.*;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

class AreaCalulatorTest {
	
	AreaCalulator calculateArea;
	
	@BeforeEach
	void init() {
		calculateArea = new AreaCalulator();
	}
	
	@Test
	void testAreaOfCircle() {
		assertEquals(314, calculateArea.AreaOfCircle(10), 0.01);
	}
	
	@Test
	void testAreaOfRectangle() {
		assertEquals(200, calculateArea.AreaOfRectangle(10, 20));
	}
	
	@Test
	void testAreaOfTriangle() {
		assertEquals(100, calculateArea.AreaOfTriangle(10, 20));
	}
}
