package com.aurionpro.structural.composite.test;

import com.aurionpro.structural.composite.model.ComputerComponents;
import com.aurionpro.structural.composite.model.ComputerComposite;
import com.aurionpro.structural.composite.model.ComputerParts;

public class ComputerComponentsTest {
	public static void main(String[] args) {
		ComputerComponents hdd       = new ComputerParts("hdd" , 4000);
		ComputerComponents keyboard  = new ComputerParts("keyboard",1000);
		ComputerComponents mouse     = new ComputerParts("mouse",500);
		ComputerComponents ram       = new ComputerParts("ram",3000);
		ComputerComponents processor = new ComputerParts("Processor",10000);
		
		ComputerComposite computer = new ComputerComposite("computer");

		ComputerComposite motherboard = new ComputerComposite("motherboard");
        motherboard.add(ram);
        motherboard.add(processor);


        ComputerComposite cabinet  = new ComputerComposite("cabinet");
        cabinet.add(hdd);
        cabinet.add(motherboard);

        ComputerComposite peripherals     = new ComputerComposite("peripherals");
        peripherals.add(keyboard);
        peripherals.add(mouse);

        computer.add(cabinet);
        computer.add(peripherals);

        computer.showPrice();
	}
}
