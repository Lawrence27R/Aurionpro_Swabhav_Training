package com.aurionpro.structural.composite.model;

import java.util.ArrayList;
import java.util.List;

public class ComputerComposite implements ComputerComponents {
    private String name;
    private List<ComputerComponents> computerComponents;

    public ComputerComposite(String name) {
        this.name = name;
        this.computerComponents = new ArrayList<>();
    }

    @Override
    public void showPrice() {
        for (ComputerComponents computerComponent : computerComponents) {
            computerComponent.showPrice();
        }
    }

    public void add(ComputerComponents subComponent) {
        computerComponents.add(subComponent);
    }

    public void remove(ComputerComponents subComponent) {
        computerComponents.remove(subComponent);
    }
}
